{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch via NPM",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "start"
            ],
            "console": "integratedTerminal",
            "port": 8080,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "DEBUG": "false",
                "API_URL": "http://127.0.0.1:8000"
            }
        }
    ]
}